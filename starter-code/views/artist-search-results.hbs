<div class="container">
    <div class="row">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <p id="back-link" onclick="window.history.back()">Atras</p>
            <h1 id="albums-header">Artistas</h1>
        </div>
    </div>
</div>


<div class="container">
    <div class="row">
        {{#each artists}}
        <div class="col-4 d-flex align-items-stretch">
            <div class="card">
                <img class="card-img-top"
                    src="{{#unless images.0.url}}/images/spotify-background.jpeg{{/unless}}{{images.0.url}}"
                    alt="Card image cap">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">{{name}}</h5>
                    <a href="/albums/{{id}}" class="btn btn-primary">View Albums</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>