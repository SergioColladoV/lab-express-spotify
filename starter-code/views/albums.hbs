<div class="container">
    <div class="row">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <p id="back-link" onclick="window.history.back()">Atras</p>
            <h1 id="albums-header">Albums for: {{albums.0.artists.0.name}}</h1>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        {{#each albums}}
        <div class="col-4 d-flex align-items-stretch">
            <div class="card">
                <img class="card-img-top" src="{{images.0.url}}" alt="Card image cap">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">{{name}}</h5>
                    <a href="/tracks/{{id}}" class="btn btn-primary">View Tracks</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>